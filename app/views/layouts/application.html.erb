    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  </head>

  <body>
    <%= render 'pages/navbar' %>
    <div class="main-content">
      <%= yield %>
    </div>
    <%= render 'pages/footer' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/flatpickr' %>
  </body>
</html>

