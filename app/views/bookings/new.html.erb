<h1>Nouvelle réservation</h1>
<div class="form-container">
<div class="form-scale-log-in">
<%= simple_form_for([@booking.brain, @booking]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date,
            label: 'Date de début',
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
   <%= f.input :end_date,
            label: 'Date de fin',
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirmer", class: "btn btn-primary log-in" %>
  </div>
<% end %>
</div>
</div>
