<div class="mybrain-title2 center-title">
  <h2>Check ce cerveau de malade</h2>
</div>



<div class='container' >

<div class="card-product" >
  <% if @brain.image.attached? %>
                <%= cl_image_tag @brain.image.key, id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag(src="cerveau1.png", alt: "Image de #{@brain.competence}" ) %>
              <% end %>
  <div class="card-product-infos">
    <h2><%=@brain.name%> </h2>
    <p><%= @brain.address%> </p>
    <p><%= @brain.price%>€</p>
    <p><%= @brain.competence%></p>
    <p><%= @brain.user.first_name%> <%= @brain.user.last_name%></p>
  </div>
    <button class='btn btn-success d-flex flex-row-reverse' style='border-radius: 6px'><%= link_to 'Réserver', new_brain_booking_path(@brain), class: "text-decoration-none text-dark"%></button>
</div>
 <div style="width: 100%; height: 300px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    data-map-disable-info-window="true">
  </div>
</div>
