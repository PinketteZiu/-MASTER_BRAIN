<div class="container">
  <h1>Tous nos cerveaux</h1>

  <div> FILTRE </div>

  <p><em> Dispo pour toi : </em></p>
    <div class="cards">
      <% @brains.each do |brain|%>
        <div class="card-trip">
          <%= link_to brain_path(brain), class: "text-decoration-none" do %>
              <% if brain.image.attached? %>
                <%= cl_image_tag brain.image.key %>
              <% else %>
                <%= image_tag("cerveau1.png", alt: "Image de #{brain.competence}" ) %>
              <% end %>
            <h2><%= brain.name %> </h2>
            <p><%= brain.address %> </p>
            <p><%= brain.price %></p>
          <% end %>
        </div>
       <% end %>
    </div>

  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
